<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textfield"
        android:textColor="#ffffff"
        android:gravity="right"
        android:textIsSelectable="false"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:textColor="#ffffff"
        android:background="@drawable/textfield"
        android:layout_below="@+id/textView1"
        android:textSize="36sp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="103dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView2"
        android:background="@drawable/button"
        android:text="AC"
        android:textColor="#03A9F4"
        android:textSize="25sp"
        app:backgroundTint="#0C0C0C" />

    <Button
        android:id="@+id/buttonBackSpace"
        android:layout_width="103dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:text="B"
        android:textColor="#03A9F4"
        android:textSize="20sp"
        app:backgroundTint="#0C0C0C" />

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="103dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/buttonBackSpace"
        android:background="@drawable/button"
        android:text="%"
        android:textColor="#03A9F4"
        android:textSize="25sp"
        app:backgroundTint="#101010" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="103dp"
        android:layout_height="120dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/button"
        android:text="/"
        android:layout_marginLeft="2dp"
        android:textColor="#03A9F4"
        android:textSize="25sp"
        app:backgroundTint="#101010" />


    <Button
        android:id="@+id/button9"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/buttonClear"
        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:text="9"
        android:textColor="#FAF7F7"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/button7"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/buttonPercent"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/button8"
        android:background="@drawable/button"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/buttonDivide"
        android:layout_toRightOf="@+id/button7"
        android:background="@drawable/button"
        android:layout_marginLeft="2dp"
        android:text="*"
        android:textColor="#03A9F4"
        android:textSize="28sp"
        app:backgroundTint="#101010" />


    <Button
        android:id="@+id/button6"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button9"
        android:background="@drawable/button"
        android:text="6"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/button5"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button8"
        android:layout_toRightOf="@+id/button6"
        android:background="@drawable/button"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/button4"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button7"
        android:layout_toRightOf="@+id/button5"
        android:background="@drawable/button"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/buttonMultiply"
        android:layout_toRightOf="@+id/buttonPercent"
        android:background="@drawable/button"
        android:text="-"
        android:textColor="#03A9F4"
        android:layout_marginLeft="2dp"
        android:textSize="28sp"
        app:backgroundTint="#131313" />


    <Button
        android:id="@+id/button1"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button6"
        android:background="@drawable/button"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/button2"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button1"
        android:background="@drawable/button"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/button3"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button4"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/button"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/button8"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/buttonBackSpace"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/button9"
        android:background="@drawable/button"
        android:text="8"
        android:textColor="#E6E3E3"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/buttonSubtract"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/button3"
        android:background="@drawable/button"
        android:text="+"
        android:textColor="#03A9F4"
        android:textSize="28sp"
        app:backgroundTint="#151515" />


    <Button
        android:id="@+id/button0"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button1"
        android:background="@drawable/button"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="103dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/button0"
        android:background="@drawable/button"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="28sp"
        app:backgroundTint="#0E0E0E" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="209dp"
        android:layout_height="111dp"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/buttonDot"
        android:background="@drawable/button"
        android:text="="
        android:textColor="#FF9800"
        android:textSize="25sp"
        app:backgroundTint="#121111" />




</RelativeLayout>